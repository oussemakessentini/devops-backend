	< groupId >tn.esprit.rh</ groupId >
	< artefactId >achat</ artefactId >
	< version >1.0</ version >
	< nom >achat</ nom >
	< description >Projet pour le module DevOps</ description >
	< propriétés >
		< java .version>1.8</ java .version>
		< maven-jar-plugin .version>3.1.1</ maven-jar-plugin .version>
	</ propriétés >
	< dépendances >
		< dépendance >
			< groupId >org.springframework.boot</ groupId >
			< artefactId >spring-boot-starter-data-jpa</ artefactId >
		</ dépendance >
		< dépendance >
			< groupId >org.springframework.boot</ groupId >
			< artefactId >spring-boot-starter-web</ artefactId >
		</ dépendance >

		< dépendance >
			< groupId >mysql</ groupId >
			< artefactId >mysql-connector-java</ artefactId >
			< portée >exécution</ portée >
		</ dépendance >
		< dépendance >
			< groupId >org.projectlombok</ groupId >
			< artefactId >lombok</ artefactId >
			< facultatif >vrai</ facultatif >
		</ dépendance >
		< dépendance >
			< groupId >org.springframework.boot</ groupId >
			< artefactId >spring-boot-starter-test</ artefactId >
