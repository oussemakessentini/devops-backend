			< groupId >io.springfox</ groupId >
			< artefactId >springfox-swagger-ui</ artefactId >
			< version >3.0.0</ version >
		</ dépendance >

	</ dépendances >

	< construire >
		< plugins >
			< plugin >
				< groupId >org.springframework.boot</ groupId >
				< artefactId >spring-boot-maven-plugin</ artefactId >
